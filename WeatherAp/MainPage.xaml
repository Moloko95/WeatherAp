<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherAp.MainPage">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Weather App" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

        <Label x:Name="LocationLabel" Text="Fetching location..." FontSize="20" HorizontalOptions="Center" />

        <Label x:Name="WeatherLabel" Text="Fetching weather..." FontSize="20" HorizontalOptions="Center" />

        <Button Text="Refresh" Clicked="OnRefreshClicked"/>
    </VerticalStackLayout>
</ContentPage>

